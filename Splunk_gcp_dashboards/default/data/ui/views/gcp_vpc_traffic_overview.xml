<!--v1.5-->
<form version="1.1">
  <label>GCP VPC Traffic Overview</label>
  <search id="source_data_query">
    <query>
      |makeresults | eval addon="data."| eval dataflow="" 
      |eval datatag=`datatag`
    </query>
    <done>
      <set token="datatag">$result.datatag$</set>
    </done>
  </search>
  
  <search id="tstats_query">
    <query>
      |makeresults 
      |eval usetstats="Yes" 
      |eval notstats="No"
      |eval tstatstag=`tstatstag`
      
      |eval tstats_count=if(tstatstag=="Yes", "|tstats fillnull_value=null count where","")
      
      |eval stats_count=if(tstatstag=="No", "|stats count ", "")
      
      |eval tstats_count_dc=if(tstatstag=="Yes", "|tstats dc(\"$datatag$jsonPayload.connection.protocol\") as Protocols where", "")
      |eval stats_dc=if(tstatstag=="No", "|stats dc(\"$datatag$jsonPayload.connection.protocol\") as Protocols", "")
      
      |eval tstats_sum_bytes=if(tstatstag=="Yes", "|tstats sum(\"$datatag$jsonPayload.bytes_sent\") as total_bytes where", "")
      |eval stats_sum_bytes=if(tstatstag=="No", "|stats sum(\"$datatag$jsonPayload.bytes_sent\") as total_bytes", "")
      
      |eval tstats_sum_packets=if(tstatstag=="Yes", "|tstats  sum(\"$datatag$jsonPayload.packets_sent\") as total_packets_sent where", "")
      |eval stats_sum_packets=if(tstatstag=="No", "|stats sum(\"$datatag$jsonPayload.packets_sent\") as total_packets_sent", "")
      
      |eval tstats_sum_dest=if(tstatstag=="Yes", "|tstats dc(\"$datatag$jsonPayload.connection.dest_ip\") as Dest where", "")
      |eval stats_sum_dest=if(tstatstag=="No", "|stats dc(\"$datatag$jsonPayload.connection.dest_ip\") as Dest ", "")
      
      |eval tstats_sum_sources=if(tstatstag=="Yes", "|tstats dc($datatag$jsonPayload.connection.src_ip) as Sources where", "")
      |eval stats_sum_sources=if(tstatstag=="No", "|stats dc($datatag$jsonPayload.connection.src_ip) as Sources ", "")
      
    </query>
    <done>
      <set token="tstats_count">$result.tstats_count$</set>
      <set token="stats_count">$result.stats_count$</set>
      <set token="tstats_count_dc">$result.tstats_count_dc$</set>
      <set token="stats_dc">$result.stats_dc$</set>
      <set token="tstats_sum_bytes">$result.tstats_sum_bytes$</set>
      <set token="stats_sum_bytes">$result.stats_sum_bytes$</set>
      <set token="tstats_sum_packets">$result.tstats_sum_packets$</set>
      <set token="stats_sum_packets">$result.stats_sum_packets$</set>
      <set token="tstats_sum_dest">$result.tstats_sum_dest$</set>
      <set token="stats_sum_dest">$result.stats_sum_dest$</set>
      <set token="tstats_sum_sources">$result.tstats_sum_sources$</set>
      <set token="stats_sum_sources">$result.stats_sum_sources$</set>
    </done>
  </search>
  
  
  <fieldset submitButton="false">
    <input type="time" token="field1">
      <label></label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Number of VMs</title>
      <single>
        <search>
          <query>$tstats_count$ `gcp_index` (sourcetype=google:gcp:pubsub:message OR sourcetype=google:gcp:compute:vpc_flows)  "$datatag$logName"="*/logs/compute.googleapis.com%2Fvpc_flows" $stats_count$ by "$datatag$jsonPayload.src_instance.vm_name", "$datatag$jsonPayload.dest_instance.vm_name" | rename "$datatag$jsonPayload.src_instance.vm_name" as vmsrc | rename "$datatag$jsonPayload.dest_instance.vm_name" as vmdest | eval allvms=if(vmsrc="null", vmdest, vmsrc)| stats dc(allvms) as vms</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0x53a051", "0x0877a6", "0xf8be34", "0xf1813f", "0xdc4e41"]</option>
        <option name="rangeValues">[0,30,70,100]</option>
        <option name="refresh.display">progressbar</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="unitPosition">after</option>
        <option name="useColors">0</option>
        <option name="useThousandSeparators">1</option>
      </single>
    </panel>
    <panel>
      <title>Protocols</title>
      <single>
        <search>
          <query>$tstats_count_dc$ `gcp_index` (sourcetype=google:gcp:pubsub:message OR sourcetype=google:gcp:compute:vpc_flows) "$datatag$logName"="*/logs/compute.googleapis.com%2Fvpc_flows" $stats_dc$ </query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0x53a051", "0x0877a6", "0xf8be34", "0xf1813f", "0xdc4e41"]</option>
        <option name="rangeValues">[0,30,70,100]</option>
        <option name="refresh.display">progressbar</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="unitPosition">after</option>
        <option name="useColors">0</option>
        <option name="useThousandSeparators">1</option>
      </single>
    </panel>
    <panel>
      <title>Total Traffic (GB)</title>
      <single>
        <search>
          <query> $tstats_sum_bytes$ `gcp_index` (sourcetype=google:gcp:pubsub:message OR sourcetype=google:gcp:compute:vpc_flows)  "$datatag$logName"="*/logs/compute.googleapis.com%2Fvpc_flows"  $stats_sum_bytes$
| eval GB = round((((total_bytes / 1024) / 1024) / 1024),2)
| fields + GB</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0.00</option>
        <option name="rangeColors">["0x53a051","0x0877a6","0xf8be34","0xf1813f","0xdc4e41"]</option>
        <option name="refresh.display">progressbar</option>
      </single>
    </panel>
    <panel>
      <title>Total Packets</title>
      <single>
        <search>
          <query>$tstats_sum_packets$ `gcp_index` (sourcetype=google:gcp:pubsub:message OR sourcetype=google:gcp:compute:vpc_flows) "$datatag$logName"="*/logs/compute.googleapis.com%2Fvpc_flows" $stats_sum_packets$</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <title>Destinations</title>
      <single>
        <search>
          <query>$tstats_sum_dest$ `gcp_index` (sourcetype=google:gcp:pubsub:message OR sourcetype=google:gcp:compute:vpc_flows)  "$datatag$logName"="*/logs/compute.googleapis.com%2Fvpc_flows" $stats_sum_dest$</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0x53a051", "0x0877a6", "0xf8be34", "0xf1813f", "0xdc4e41"]</option>
        <option name="rangeValues">[0,30,70,100]</option>
        <option name="refresh.display">progressbar</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="unitPosition">after</option>
        <option name="useColors">0</option>
        <option name="useThousandSeparators">1</option>
      </single>
    </panel>
    <panel>
      <title>Sources</title>
      <single>
        <search>
          <query>|tstats dc($datatag$jsonPayload.connection.src_ip) as Sources where `gcp_index` (sourcetype=google:gcp:pubsub:message OR sourcetype=google:gcp:compute:vpc_flows)  "$datatag$logName"="*/logs/compute.googleapis.com%2Fvpc_flows"</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0x53a051", "0x0877a6", "0xf8be34", "0xf1813f", "0xdc4e41"]</option>
        <option name="rangeValues">[0,30,70,100]</option>
        <option name="refresh.display">progressbar</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="unitPosition">after</option>
        <option name="useColors">0</option>
        <option name="useThousandSeparators">1</option>
      </single>
    </panel>
  </row>
</form>